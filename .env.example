# Database Configuration (SQLite for Windows)
DB_TYPE=sqlite
DB_PATH=./data/document_management.db

# Server Configuration
PORT=3000
NODE_ENV=development
SESSION_SECRET=your_session_secret_here

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Site Branding
SITE_NAME=Document Management System
COMPANY_LOGO_URL=./uploads/branding/logo.png
PRIMARY_COLOR=#007bff
SECONDARY_COLOR=#6c757d

# File Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=50000000
ALLOWED_EXTENSIONS=pdf,docx,xlsx,jpg,jpeg,png,txt,json,xml

# OCR Configuration (Windows paths)
TESSERACT_PATH=C:\\Program Files\\Tesseract-OCR\\tesseract.exe
OCR_LANGUAGES=eng

# Security
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600000

# Windows Application Settings
WINDOW_WIDTH=1200
WINDOW_HEIGHT=800
MINIMIZE_TO_TRAY=true
START_MINIMIZED=false
AUTO_LAUNCH=false

# Admin User (created on first run)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
ADMIN_FIRST_NAME=System
ADMIN_LAST_NAME=Administrator

# Auto-updater Configuration
UPDATE_SERVER_URL=https://your-server.com/updates
CHECK_FOR_UPDATES=true
AUTO_DOWNLOAD_UPDATES=false